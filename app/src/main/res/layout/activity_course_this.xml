<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!--이번 여정 코스-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번 여정 코스"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="158dp"
                    android:layout_height="180dp">
                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="180dp"
                        android:background="@drawable/course_back"/>

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/course1"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_name_course1"
                        android:text="당현천길"
                        android:layout_below="@id/course1"
                        android:layout_alignStart="@id/course1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_km_course1"
                        android:text="2.84km"
                        android:layout_below="@id/course1"
                        android:layout_alignEnd="@id/course1" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="158dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="16dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="180dp"
                        android:background="@drawable/course_back"/>

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/course2"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_name_course2"
                        android:text="당현천길"
                        android:layout_below="@id/course2"
                        android:layout_alignStart="@id/course2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_km_course2"
                        android:text="2.84km"
                        android:layout_below="@id/course2"
                        android:layout_alignEnd="@id/course2" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="158dp"
                    android:layout_height="180dp">
                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="180dp"
                        android:background="@drawable/course_back"/>

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/course3"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_name_course3"
                        android:text="당현천길"
                        android:layout_below="@id/course3"
                        android:layout_alignStart="@id/course3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_km_course3"
                        android:text="2.84km"
                        android:layout_below="@id/course3"
                        android:layout_alignEnd="@id/course3" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="158dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="16dp">

                    <ImageView
                        android:layout_width="158dp"
                        android:layout_height="180dp"
                        android:background="@drawable/course_back"/>

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="138dp"
                        android:layout_height="138dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:id="@+id/course4"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_name_course4"
                        android:text="당현천길"
                        android:layout_below="@id/course4"
                        android:layout_alignStart="@id/course4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/info_km_course4"
                        android:text="2.84km"
                        android:layout_below="@id/course4"
                        android:layout_alignEnd="@id/course4" />
                </RelativeLayout>
            </LinearLayout>


            <!--다른 지역 보기-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다른 코스 보기"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textColor="#000"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mark_joongu"
                    android:id="@+id/course_this_other1"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mark_seongdong"
                    android:id="@+id/course_this_other2"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mark_gwanak"
                    android:id="@+id/course_this_other3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mark_nowon"
                    android:id="@+id/course_this_other4"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mark_seongbuk"
                    android:id="@+id/course_this_other5"/>
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/mark_joongrang"
                    android:id="@+id/course_this_other6"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
