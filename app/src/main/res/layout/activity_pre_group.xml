<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFECD0"
    android:orientation="vertical">


    <!--로고이미지 (현재 임의)와 멘트-->
    <ImageView
        android:id="@+id/imgInviteLogo"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/intro_logo_nonfont" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="함께 하는 목표 달성, 어울림!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="가까운 친구들과 서로 격려하며"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표를 완성"
            android:textColor="#ff0000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하는 "
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성취감"
            android:textColor="#ff0000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="을 누리세요."
            android:textSize="14sp" />
    </LinearLayout>

    <!--버튼 두개-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingRight="8dp"
        android:paddingLeft="8dp">

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btnRoomExit"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_mint" />

            <TextView
                android:id="@+id/txtRoomExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="방 나가기"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="45dp">

            <Button
                android:id="@+id/btnRoomStart"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/button_mint" />

            <TextView
                android:id="@+id/txtRoomStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="시작하기"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e6e6"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <!--나의 정보-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/list_background"
            android:orientation="horizontal"
            android:padding="6dp">

            <condi.kr.ac.swu.condiproject.view.CircularNetworkImageView
                android:id="@+id/myProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="6dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/myName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장미희"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="010-4440-2611"
                    android:textColor="#666"
                    android:textSize="16sp" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_pre_add_friend_back"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/list_background"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:focusable="false"
                android:id="@+id/btn_pre_add_friend"
                android:src="@drawable/btn_add_item"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <ListView
            android:id="@+id/inviteList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e6e6e6"
            android:divider="#00000000"
            android:dividerHeight="5dp"/>

    </LinearLayout>
</LinearLayout>